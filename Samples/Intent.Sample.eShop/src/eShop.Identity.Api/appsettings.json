{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Security.Bearer": {
    "Authority": "https://localhost:{sts_port}",
    "Audience": "api"
  },
  "CqrsSettings": {
    "LogRequestPayload": true
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] {Category:0} - {Message}{NewLine:1}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ]
  },
  "JwtToken": {
    "Issuer": "https://localhost:44395",
    "Audience": "api",
    "SigningKey": "aHHDYCTvyZVbdcGgaDvL+T6837pHCkciU0rLvUbE9a4=",
    "AuthTokenExpiryTimeSpan": "02:00:00",
    "RefreshTokenExpiryTimeSpan": "3.00:00:00"
  },
  "EmailSender": {
    "SmtpHost": "smtp.yourdomain.com",
    "SmtpPort": "587",
    "SenderEmail": "noreply@yourdomain.com",
    "SenderName": "YourAppName",
    "Username": "smtp-username",
    "Password": "smtp-password",
    "UseSsl": "true"
  }
}